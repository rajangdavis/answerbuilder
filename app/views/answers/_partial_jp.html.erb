<% if @answer.series=="None"%>
	<div class="col-md-12 col-sm-12 col-xs-12 title jumbotron">
		<div class="col-md-12 col-sm-12 col-xs-12 text-center answer-title">
			<h1 class="inst answer"><%= @answer.title_jp%></h1>
		</div>
	</div>
<% else %>
	<div class="col-md-12 col-sm-12 col-xs-12 title jumbotron">
		<div class="col-md-10 col-sm-10 col-xs-8 pull-right answer-title">
			<h1 class="inst answer"><%= @answer.title_jp%></h1>
		</div>
		<div class="col-md-2 col-sm-2 col-xs-4 pull-left">
			<% if @answer.series=="QT"%>
				<img class="qtIcon img-responsive" src="//q-see.s3.amazonaws.com/content/support/howto/O4AEPmF.png">
			<% elsif @answer.series=="QC"%>
				<img class="qcIcon img-responsive" src="//q-see.s3.amazonaws.com/content/support/howto/LNcBXLp.jpg">
			<% end %>
		</div>
	</div>
<% end %>
<%if !@answer.tagline_jp.blank?%>
	<div class="tagline">
		<p class="text-center lead"><%= @answer.tagline_jp%></p>
	</div>
<% end %>
<div class="steps">
	<% @steps.each do |step|%>
		<% if step.step_type=="Step"%>
			<div class="step-instructions col-md-12 col-sm-12 col-xs-12">
				<div class="col-md-6 col-sm-6 col-xs-6">
					<h2 class="inst answer">
						<strong>ステップ <%= step.number %></strong>
					</h2>
					<br><p class="inst step_jp"><%= step.step_jp%></p><br>
					<% if step.image_upload_jp.exists?%>
						<em class="clear lead red"> (図 <%= step.number+step.offset %>)</em>				
					<% end %>
				</div>
				<div class="pull-right col-md-6 col-sm-6 col-xs-6 text-center">
					<a href="#img-<%= step.id%>" class="pop">
						<% if step.image_upload_jp.exists?%>
							<%= image_tag(step.image_upload_jp, :class => "img-responsive", :id => "img-"+step.id.to_s.to_s) %>
						<% end %>
					</a>
					<% if step.image_upload_jp.exists?%>
						<h2 class="answer red">
							図 <%=step.number+step.offset%>
						</h2>
					<% end %>
				</div>
			</div><br>
		<% elsif step.step_type=="Information"%>
			<div class="step-instructions col-md-12 col-sm-12 col-xs-12">
				<div class="inst col-md-6 col-sm-6 col-xs-6 information_new">
					<i class="pull-left fa fa-3x fa-info-circle"></i>
					<br><span class="step_jp"><%= step.step_jp%></span><br>
					<% if step.image_upload_jp!=""%>
						<em class="clear lead red"> (図 <%= step.number+step.offset %>)</em>				
					<% end %>
				</div>
				<div class="pull-right col-md-6 col-sm-6 col-xs-6 text-center">
					<a href="#img-<%= step.id%>" class="pop">
						<img id="img-<%= step.id%>"class="img-responsive" src="//<%= step.image%>">
						<% if step.image_upload_jp!=""%>
							<%= image_tag(step.image_upload_jp, :class => "img-responsive", :id => "img-"+step.id.to_s) %>
						<% end %>
					</a>
					<% if step.image_upload_jp!=""%>
						<h2 class="answer red">
							図 <%=step.number+step.offset%></h2>
					<% end %>
				</div>
			</div><br>
		<% elsif step.step_type=="Caution"%>
			<div class="step-instructions col-md-12 col-sm-12 col-xs-12">
				<div class="inst col-md-6 col-sm-6 col-xs-6 cautiondiv_new">
					<i class="pull-left fa fa-3x fa-exclamation-triangle"></i>
					<h2 class="answer">
						<br><span class="step_jp"><%= step.step_jp%></span><br>
					</h2>
					<% if step.image_upload_jp.exists?%>
						<em class="clear lead red"> (図 <%= step.number+step.offset %>)</em>				
					<% end %>
				</div>
				<div class="pull-right col-md-6 col-sm-6 col-xs-6 text-center">
					<a href="#img-<%= step.id%>" class="pop">
						<% if step.image_upload_jp.exists?%>
							<%= image_tag(step.image_upload_jp, :class => "img-responsive", :id => "img-"+step.id.to_s) %>
						<% end %>
					</a>
					<% if step.image_upload_jp.exists?%>
						<h2 class="answer red">
							図 <%=step.number+step.offset%>
						</h2>
					<% end %>
				</div>
			</div><br>
		<% end %>
	<% end %>
</div>