<div class="container">
	<%= link_to "Back", :back%> |
	<%= link_to "Edit", edit_answer_path(@answer)%> |
	<%= link_to "Preview", preview_path(@answer)%>
	<textarea class="code"></textarea>
	<code>
		<%= render 'partial' %>
	</code>
	<script type="text/javascript" src="/code.js"></script>
	<script type="text/javascript">
		function scrollTop(elemSelector){
		  $('html, body').animate({
		        scrollTop: $(elemSelector).offset().top-80
		    }, 1000)
		};
		scrollTop("body");
	</script>
</div>